citHeader("To cite package 'rmincIO' in publications use:")

desc <- packageDescription("rmincIO")
vers <- paste("R package version", desc$Version)

citEntry(entry="Manual",
		title = "Package rmincIO: Minc Volume Access Without Tears",
		author = personList(as.person("Jim Nikelski")),
		year = 2012,
		note = vers,
		organization = "McGill University",
		address = "Montreal, Quebec, Canada",
		textVersion = paste("Jim Nikelski (2009). Package rmincIO: Minc Volume Access Without Tears. ",
		                     vers, ". ",
		                    "McGill University, Montreal, Quebec, Canada.", sep="")
)
